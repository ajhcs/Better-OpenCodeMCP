{
  "name": "opencode-mcp-tool",
  "version": "1.2.0",
  "description": "MCP server for OpenCode CLI integration",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "opencode-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc && node dist/index.js",
