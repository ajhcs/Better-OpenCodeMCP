  "author": "frap129",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ajhcs/Better-OpenCodeMCP.git"
  },
  "bugs": {
    "url": "https://github.com/ajhcs/Better-OpenCodeMCP/issues"
  },
  "homepage": "https://github.com/ajhcs/Better-OpenCodeMCP#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "commander": "^12.0.0",
    "zod": "^3.25.76",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.0",
